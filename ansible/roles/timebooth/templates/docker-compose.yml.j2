version: '3'
services:
  nginx:
    image: nginx
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    ports:
      - "8080:80"
    depends_on:
      - api

  postgres:
    build: ./postgres
    volumes:
      - pg_data:/var/lib/postgresql/data
      - ./postgres/recovery-initdb:/docker-entrypoint-initdb.d
      - ./mock_archive/pg_wal_mnt:/mnt/server/archivedir
    command: postgres

  api:
    build:
      context: ./rails_api

    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    volumes:
      - ./rails_api:/usr/src/app
      - bundle:/usr/local/bundle
    depends_on:
      - postgres

volumes:
  bundle:
  pg_data:
